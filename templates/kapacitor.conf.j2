[talk]
  # Configure Talk.
  enabled = {{ kapacitor_talk_enabled|default(false)|bool|lower }}
  # The Talk webhook URL.
  url = "{{ kapacitor_talk_url }}"
  # The default authorName.
  author_name = "{{ kapacitor_talk_author_name|default('Kapacitor') }}"

